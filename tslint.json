{
  "extends": [
    "tslint:latest",
    "tslint-react",
    "tslint-plugin-prettier",
    "tslint-config-prettier"
  ],
  "rules": {
    "prettier": true,
    "quotemark": [
      true,
      "single",
      "avoid-escape",
      "avoid-template",
      "jsx-double"
    ],
    "no-bitwise": false,
    "object-literal-sort-keys": false,
    "no-implicit-dependencies": [true, "dev"]
  },
  "globals": {
    "AMap": true
  },
  "linterOptions": {
    "exclude": ["**/*.d.ts", "**/data/*.ts", "**/*.{test,story}.ts{,x}", "node_modules/**"]
  }
}
